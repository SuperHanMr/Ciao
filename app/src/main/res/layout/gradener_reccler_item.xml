<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <LinearLayout
    android:layout_marginTop="20dp"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:textColor="#29c28a"
        android:id="@+id/gradeder_item_tv"
        android:textSize="60px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第一阶段"
        />
    <EditText
        android:id="@+id/add_gradener_ed_day"
        android:inputType="number"
        android:layout_marginLeft="40px"
        android:hint="0"
        android:background="#0000"
        android:layout_width="100px"
        android:layout_height="wrap_content"
        android:textSize="40px"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="天"
        android:textSize="40px"
        />
</LinearLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"
            android:textSize="40px"
            android:text="植物每个阶段的图像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.example.hanyonghui.ciao.view.views.ImageEditdingView
            android:id="@+id/add_gradener_iv_head"
            android:layout_marginLeft="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ciao_logo"
            />


    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="植物名称"
            />
        <EditText
            android:id="@+id/add_gradener_ed_title"
            android:layout_marginLeft="40px"
            android:hint="蓝菊花"
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阶段描述"
            />
        <EditText
            android:id="@+id/add_gradener_ed_phase"
            android:layout_marginLeft="40px"
            android:hint="萌芽阶段"
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="浇水间隔"
            />
        <EditText
            android:id="@+id/add_gradener_ed_watering"
            android:layout_marginLeft="40px"
            android:hint="1"
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="喷雾间隔"
            />
        <EditText
            android:id="@+id/add_gradener_ed_spray"
            android:layout_marginLeft="40px"
            android:hint="1"
            android:background="#0000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="40px"
            />
    </LinearLayout>

</LinearLayout>