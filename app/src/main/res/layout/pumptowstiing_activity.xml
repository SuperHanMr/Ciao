<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/pump_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="160px">

        <RelativeLayout
            android:id="@+id/pumptow_back"
            android:layout_width="160px"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_width="50px"
                android:layout_height="50px"
                android:src="@drawable/safar"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/pumptow_title"
            android:textColor="#29c28a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="自动泵浇水设置"
            android:textSize="60px" />
        <TextView
            android:visibility="gone"
            android:id="@+id/pumptow_commtion"
            android:textColor="#29c28a"
            android:text="确定"
            android:layout_marginRight="40px"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:paddingRight="20dp"
        android:paddingLeft="30dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/pump_one"
            android:gravity="center"
            android:text="1"
            android:textColor="#fff" />

        <TextView
            android:layout_marginTop="20px"
            android:textColor="#fff"
            android:textSize="30px"
            android:text="每天"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pumptow_recycler"
            android:layout_width="match_parent"
            android:layout_height="300px"
            android:layout_marginTop="10px"></android.support.v7.widget.RecyclerView>

        <ImageView
            android:id="@+id/pumptow_add"
            android:layout_marginTop="10px"
            android:src="@drawable/add_pumpp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


        <TextView
            android:id="@+id/textView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15px"
            android:layout_marginTop="20dp"
            android:background="@drawable/pump_one"
            android:gravity="center"
            android:text="2"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/tv_renwu_mingchen"
            android:layout_marginTop="20px"
            android:textSize="30px"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置重复浇灌设置"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="30px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="30px"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="每周"
                />

            <LinearLayout
                android:layout_marginLeft="40px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30px"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="一"
                    />

                <CheckBox
                    android:id="@+id/checkbox_yi"
                    android:background="@drawable/selector_pumptowstiing"
                    android:layout_marginTop="30px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:button="@null"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="40px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30px"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二"
                    />

                <CheckBox
                    android:id="@+id/checkbox_er"
                    android:background="@drawable/selector_pumptowstiing"
                    android:layout_marginTop="30px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30px"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="三"
                    />

                <CheckBox
                    android:id="@+id/checkbox_san"
                    android:background="@drawable/selector_pumptowstiing"
                    android:layout_marginTop="30px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30px"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="四"
                    />

                <CheckBox
                    android:id="@+id/checkbox_si"
                    android:background="@drawable/selector_pumptowstiing"
                    android:layout_marginTop="30px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30px"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="五"
                    />

                <CheckBox
                    android:id="@+id/checkbox_wu"
                    android:background="@drawable/selector_pumptowstiing"
                    android:layout_marginTop="30px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30px"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="六"
                    />

                <CheckBox
                    android:id="@+id/checkbox_liu"
                    android:background="@drawable/selector_pumptowstiing"
                    android:layout_marginTop="30px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:button="@null"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="40px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="30px"
                    android:textColor="#fff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="日"
                    />

                <CheckBox
                    android:id="@+id/checkbox_ri"
                    android:background="@drawable/selector_pumptowstiing"
                    android:layout_marginTop="30px"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="30px"
                    android:layout_height="30px"
                    android:button="@null"
                    />
            </LinearLayout>

        </LinearLayout>



        <RelativeLayout
            android:layout_marginTop="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_marginLeft="20dp"
                android:id="@+id/preservation"
                android:layout_centerVertical="true"
                android:background="@drawable/etermine"
                android:layout_alignParentLeft="true"
                android:layout_width="80px"
                android:layout_height="80px"

                />

            <ImageButton
                android:layout_marginRight="20dp"
                android:id="@+id/cancel"
                android:layout_centerVertical="true"
                android:background="@drawable/cancel"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </RelativeLayout>

    </LinearLayout>

    </ScrollView>


</LinearLayout>