<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/forgetpassword_back"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            />

        <TextView
            android:layout_gravity="center"
            android:textSize="50px"
            android:textColor="#000"
            android:text="忘记密码"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/forgetpassword_tijiao"
            android:textSize="40px"
            android:textColor="#29c28a"
            android:layout_marginRight="35px"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            />

    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:paddingRight="20px"
        android:paddingLeft="20px"
        android:id="@+id/logdin_registered"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40px"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/login_ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="#0000"
                android:hint="请输入手机号"
                android:textColorHint="#dddddd"
                android:textSize="24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/login_ed_phone"
                android:layout_marginTop="20px"
                android:background="#b4b4b4" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">
            <EditText
                android:id="@+id/login_ed_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="#0000"
                android:hint="请输入验证码"
                android:textColorHint="#dddddd"
                android:textSize="24px" />



            <RelativeLayout

                android:id="@+id/login_rl_code"
                android:gravity="center"
                android:background="@drawable/code_rounded_corners"
                android:layout_alignParentRight="true"
                android:layout_width="230px"
                android:layout_height="50px">

                <TextView
                    android:id="@+id/login_tv_code"
                    android:textSize="24px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发送验证码"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/login_ed_code"
            android:layout_marginTop="20px"
            android:background="#b4b4b4" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">
            <EditText
                android:inputType="textPassword"
                android:id="@+id/registered_ed_pawssword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="#0000"
                android:hint="请输入密码"
                android:textColorHint="#dddddd"
                android:textSize="24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/registered_ed_pawssword"
                android:layout_marginTop="20px"
                android:background="#b4b4b4" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40px">
            <EditText
                android:inputType="textPassword"
                android:id="@+id/registered_ed_confirm_pawssword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10px"
                android:background="#0000"
                android:hint="请再次输入密码"
                android:textColorHint="#dddddd"
                android:textSize="24px" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/registered_ed_confirm_pawssword"
                android:layout_marginTop="20px"
                android:background="#b4b4b4" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>