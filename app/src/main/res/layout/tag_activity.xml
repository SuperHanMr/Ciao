<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <include layout="@layout/toolbar_activity"/>

    <ScrollView
       android:layout_weight="7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <TextView
           android:layout_marginLeft="20px"
           android:textColor="#000"
           android:text="通俗大类"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <com.hhl.library.FlowTagLayout
           android:id="@+id/tag_activity_popular"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="20px"
        android:textColor="#000"
        android:text="摆放位置"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <com.hhl.library.FlowTagLayout
        android:id="@+id/tag_activity_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="功能用途"
        />
    <com.hhl.library.FlowTagLayout
        android:id="@+id/tag_activity_purpose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="礼品场合"
        />
    <com.hhl.library.FlowTagLayout
        android:id="@+id/tag_activity_gift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="季节"
        />
    <com.hhl.library.FlowTagLayout
        android:id="@+id/tag_activity_season"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="风水"
        />
    <com.hhl.library.FlowTagLayout
        android:id="@+id/tag_activity_fengshui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="20px"
        android:layout_marginLeft="20px"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="难易程度"
        />
    <com.hhl.library.FlowTagLayout
        android:id="@+id/tag_activity_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    </ScrollView>
 <LinearLayout
     android:orientation="horizontal"
     android:layout_weight="1"
     android:layout_width="match_parent"
     android:layout_height="120px">

    <Button
        android:id="@+id/tag_activity_btn_reset"
        android:textColor="#fff"
        android:background="@drawable/green_bg"
        android:text="重置"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
      <View
          android:layout_width="3px"
          android:layout_height="match_parent"/>

    <Button
        android:id="@+id/tag_activity_btn_confirm"
        android:textColor="#fff"
        android:background="@drawable/green_bg"
        android:text="确定"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

 </LinearLayout>

</LinearLayout>