<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="160px">
        <TextView
            android:textColor="#000"
            android:id="@+id/newgraden_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="花园"
            android:textSize="50px" />
        <ImageView
            android:id="@+id/newgraden_iv_add"
            android:src="@drawable/append"
            android:layout_marginRight="35px"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>
    <View
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1px"/>


        <LinearLayout
            android:id="@+id/newgraden_ll"
            android:paddingRight="20dp"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="20dp"
                android:textSize="50px"
                android:text="我的植物"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="vertical"
                android:background="@drawable/code_rounded_corners"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="200dp">
                <ImageView
                    android:id="@+id/newgraden_iv_plant"
                    android:layout_weight="1000"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ciao_logo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_plandt"
                        android:layout_marginLeft="20px"
                        android:textSize="40px"
                        android:layout_marginTop="10px"
                        android:text="植物"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/newgraden_tv_plant"
                        android:layout_marginBottom="10px"
                        android:layout_marginTop="10px"
                        android:textSize="30px"
                        android:text="已经种植1种"
                        android:layout_alignLeft="@+id/tv_plandt"
                        android:layout_below="@+id/tv_plandt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:src="@drawable/forward"
                        android:paddingRight="20px"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    <TextView
        android:paddingLeft="20dp"
        android:layout_marginTop="50dp"
        android:textSize="50px"
        android:text="我的设备"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.jcodecraeer.xrecyclerview.XRecyclerView>


</LinearLayout>