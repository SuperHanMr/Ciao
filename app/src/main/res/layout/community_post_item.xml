<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#fff"
    android:orientation="vertical"
    android:layout_marginTop="30px"
    android:layout_width="match_parent"
    android:paddingLeft="30px"
    android:paddingRight="30px"
    android:layout_height="wrap_content">

   <RelativeLayout
       android:layout_marginTop="15px"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <de.hdodenhof.circleimageview.CircleImageView
           android:layout_centerVertical="true"
           android:id="@+id/community_iv_head"
           android:layout_width="130px"
           android:src="@drawable/ciao_logo"
           android:layout_height="130px"
           />

       <TextView
           android:id="@+id/community_tv_name"
           android:layout_marginLeft="10px"
           android:textSize="40px"
           android:layout_centerVertical="true"
           android:layout_toRightOf="@id/community_iv_head"
           android:text="用户名"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

       <TextView
           android:id="@+id/community_tv_time"
           android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
           android:text="2017-02-07"
           android:textSize="35px"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
   </RelativeLayout>

    <TextView
        android:id="@+id/community_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15px"
        android:text="这是测试帖，随便说点什么 俗点哈哈哈哈"
        android:textSize="40px" />


        <com.example.hanyonghui.ciao.view.views.GridViewInScroll
            android:layout_marginTop="10px"
            android:id="@+id/community_gridview"
            android:scrollbars="none"
            android:verticalSpacing="2dp"
            android:horizontalSpacing="2dp"
            android:numColumns="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <View
        android:layout_marginTop="20px"
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="1px"/>

    <RelativeLayout
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40px"
            android:id="@+id/commentaries_iv"
            android:src="@drawable/commentaries_icon"
            android:layout_width="50px"
            android:layout_height="50px" />
        <TextView
            android:textSize="30px"
            android:layout_marginRight="10px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/community_tv_commentaries" />


        <CheckBox
            android:layout_marginRight="160px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/checkbox_thumb"
            android:background="@drawable/thumb_seleter"
            android:layout_marginTop="30px"
            android:layout_gravity="center_horizontal"
            android:layout_width="50px"
            android:layout_height="50px"
            android:button="@null"
            />
        <!--<ImageView-->
            <!--android:id="@+id/thmub_iv"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginRight="160px"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:src="@drawable/thumb"-->
            <!--android:layout_width="50px"-->
            <!--android:layout_height="50px" />-->
        <TextView
            android:id="@+id/thmub_tv_sum"
            android:layout_centerVertical="true"
            android:textSize="30px"
            android:layout_marginRight="130px"
            android:layout_alignParentRight="true"
            android:text="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>


</LinearLayout>