<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:background="@drawable/shaep_lin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/message_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="45px"
            android:text="我的消息"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.Toolbar>



    <RadioGroup
        android:id="@+id/message_rab"
        android:paddingRight="15px"
        android:paddingLeft="15px"
        android:layout_marginTop="38px"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <RadioButton
            android:checked="true"
            android:id="@+id/btn_0"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="通知"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/inform_selector"
            />
        <RadioButton
            android:id="@+id/btn_1"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="评论"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/message_selector"
            />
        <RadioButton
            android:id="@+id/btn_2"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:text="收到的赞"
            android:textSize="17.0sp"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:layout_weight="1"
            android:button="@null"
            android:background="@drawable/message_thumb_selector"
            />
    </RadioGroup>

    <com.example.hanyonghui.ciao.view.views.NoSorollViewpager
        android:id="@+id/message_vp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
    </com.example.hanyonghui.ciao.view.views.NoSorollViewpager>

</LinearLayout>
